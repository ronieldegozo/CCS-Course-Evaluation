<% if(typeof errors != 'undefined'){ %>
    <% errors.forEach(function (error) { %>
        <div class="alert alert-warning alert-dismissible fade show" type="button" class="close" data-dismiss="alert" aria-label="Close" style="    font-size: 12px;">
            <%= error.msg %>
          </div>
   <% }); %>
  <% } %>
  
  
  
  <!-- successfully register -->
  <% if(success_msg != '') { %>
    <div class="alert alert-success alert-dismissible fade show" type="button" class="close" data-dismiss="alert" aria-label="Close" style="    font-size: 12px;">
      <%= success_msg %>
    </div>
  <% } %>
  
  <!-- if registration if undefined -->
  <% if(error_msg != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" type="button" class="close" data-dismiss="alert" aria-label="Close" style="    font-size: 12px;">
      <%= error_msg %>
    </div>
  <% } %>
  
  
  <% if(error_log != '') { %>
    <div class="alert alert-warning alert-dismissible fade show" type="button" class="close" data-dismiss="alert" aria-label="Close" style="    font-size: 12px;">
      <%= error_log %>
    </div>
  <% } %>
  
