<%- include('./includes/header') %>

  <!-- Modal create admin -->
  <div class="modal fade" id="createadmin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><strong>Create Admin account</strong></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">

            <form action="/admin/register" method="POST">

                <div class="form-group">
                  
                  <%- include('../student/partials/messages') %>
                  
                    <label for="firstname"><strong>First Name</strong></label>
                    <input type="text" 
                    name="fname" 
                    class="form-control" 
                    id="fname" 
                    placeholder="First Name" 
                    value="<%= typeof fname != 'undefined' ? fname : '' %>">

                    <label for="lastname"><strong>Last Name</strong></label>
                    <input  type="text"
                    id="lname"
                    name="lname"
                    class="form-control"
                    placeholder="Last Name"
                    value="<%= typeof lname != 'undefined' ? lname : '' %>"/>

                    <label for="email"><strong>Email</strong></label>
                    <input   type="text"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter Email"
                    value="<%= typeof email != 'undefined' ? email : '' %>"/>

                    <label for="email"><strong>Password</strong></label>
                    <input type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Enter Password"
                    value="<%= typeof password != 'undefined' ? password : '' %>"/>
                </div>
                <button type="submit" class="btn btn-success float-right">Create Admin</button>
            </form>  
        </div>
      </div>
    </div>
  </div>
  
  <div class="container-scroller">
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
      <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
        <h5><a href="/admin/dashboard">College of Computer Studies</a></h5>
      </div>
      <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
        <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
          <span class="ti-view-list"></span>
        </button>

     
        <ul class="navbar-nav navbar-nav-right">
          <li class="nav-item nav-profile dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" data-target="#profileDropdown">
              
              <h5>   <i class="ti-user menu-icon"></i>Welcome Admin <%= user.fname %> </h5>
            </a>
            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" id="profileDropdown"   aria-labelledby="profileDropdown">
              <a href="/admin/logout" class="dropdown-item">
                <i class="ti-power-off text-primary"></i>
                Logout
              </a>
            </div>
          </li>
        </ul>

        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
          <span class="ti-view-list"></span>
        </button>
      </div>
    </nav>


    <!-- partial -->
