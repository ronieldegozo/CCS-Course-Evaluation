<!-- ACTIVE STUDENTS -->
<div class="row">
  <div class="col-md-6 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <p class="card-title">Active Student</p>

        <div class="table-responsive">
          <% if (stud.length > 0) { %>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">First Name</th>
                  <th scope="col">Lastname</th>
                  <th scope="col">Contact #</th>
                  <th scope="col">Email</th>
                  <th scope="col">Date</th>
                  <th scope="col">Status</th>
                  <th scope="col">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% for (let student of stud) { %>
                  <tr>
                    <td><%= student.id %></td>
                    <td><%= student.fname %></td>
                    <td><%= student.lname %></td>
                    <td><%= student.cnumber %></td>
                    <td><%= student.email %></td>
                    <td><%= student.date %></td>
                    <td><%= student.status %></td>
                    <!-- update specific student status -->
                    <td>
                      <form action="/admin/student-status" method="POST">
                        <select name="status" class="form-control" >
                            <option disabled style="color: green;"><%= student.status %></option>
                            <option value="inactive">inactive</option>
                            <option value="active">active</option>
                        </select>
                                    <!-- studentid -->
                        <input id="date" type="date"name="date" placeholder="mm/dd/yyyy" value="<%= student.date %>"/>
                        <input type="hidden" value="<%= student.id %>" name="studentId">
                        <button type="submit" class="btn btn-success float-right mt-2">Update</button>
                      </form>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>

            <% } else { %>
              <div class="container">
                  <h1 style="color: red" >No Student Found!</h1>
              </div>
          <% } %>
        </div>

      </div>
    </div>
  </div>


